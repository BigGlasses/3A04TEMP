<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mcmaster3a04.team11.audiovally">

    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:minSdkVersion="26"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SideMenu"
            android:label="@string/title_activity_side_menu"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".QueryResults"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_query_results"
            android:theme="@style/FullscreenTheme" />
        <activity
            android:name=".IDBreakdownReport"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_idbreakdown_report"
            android:theme="@style/FullscreenTheme" />
        <activity
            android:name=".AudioInput"
            android:label="@string/title_activity_audio_input2"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".AudioInputProcessing"></activity>
    </application>

</manifest>